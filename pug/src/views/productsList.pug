doctype
html(lang='es')
  include partials/head.pug
  body
    include partials/nav.pug
    div(class="container")
      div(class="row justify-content-center")
        div(class="col-9")
          h2 Listado de Productos
          if products.length
            table(class="table table-secondary table-hover table-striped")
              thead
                tr
                  th Nombre
                  th Precio
                  th(class="text-center") Foto
              tbody
                each product in products
                  tr
                    td= product.name
                    td= `$ ${product.price}` 
                    td(class="text-center")
                      img(src=product.url, width="48px")
          else
            h5(class="alert alert-warning") No hay productos en la lista

    include partials/scripts.pug